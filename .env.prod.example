# Production Environment Variables for Raspberry Pi
# Copy this to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION (Existing Instance)
# ============================================
# IP address of your existing PostgreSQL container
# Find it with: docker inspect <postgres-container-name> | grep IPAddress
# Or use Raspberry Pi's local IP if accessible
DB_HOST=172.17.0.2  # Replace with actual container IP or Pi IP
DB_PORT=5432
DB_NAME=journey_planner
DB_USER=journey_user
DB_PASSWORD=your_secure_password_here

# ============================================
# BACKEND CONFIGURATION
# ============================================
BACKEND_PORT=5001
NODE_ENV=production

# ============================================
# JWT SECRETS (IMPORTANT: Change these!)
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_very_secure_jwt_secret_min_32_chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# EMAIL CONFIGURATION (Gmail SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password  # Not your Gmail password!
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Journey Planner

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_PORT=5173
FRONTEND_URL=http://your-pi-ip:5173
VITE_API_URL=http://your-pi-ip:5001/api
CORS_ORIGIN=http://your-pi-ip:5173

# ============================================
# DOCKER IMAGE TAGS
# ============================================
IMAGE_TAG=arm64  # Use arm64 images built natively on Pi
