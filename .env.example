# Journey Planner - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===========================================
# DOCKER IMAGE CONFIGURATION
# ===========================================
# IMAGE_TAG - wersja obraz√≥w Docker z GHCR
# - "latest" dla najnowszej wersji z main branch
# - "sha-a1b2c3d" dla konkretnego commita
IMAGE_TAG=latest

# ===========================================
# DATABASE CONFIGURATION (REQUIRED)
# ===========================================
DB_NAME=journey_planner
DB_USER=journey_user
DB_PASSWORD=your_secure_db_password_here
DB_HOST=localhost
DB_PORT=5432

# ===========================================
# JWT AUTHENTICATION (REQUIRED)
# ===========================================
# Generate a strong secret: openssl rand -base64 64
JWT_SECRET=your_super_secret_jwt_key_change_in_production_minimum_32_characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# EMAIL CONFIGURATION (REQUIRED)
# ===========================================
# Gmail example (use App Password, not regular password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@journeyplanner.com

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=production
BACKEND_PORT=5001                       # NIGDY 5000 - konflikt z SmartHome!
FRONTEND_PORT=80
FRONTEND_URL=http://localhost

# For development, use:
# FRONTEND_URL=http://localhost:5173

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
UPLOAD_DIR=./uploads/attachments
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png,image/jpg,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# ===========================================
# API CONFIGURATION (for frontend)
# ===========================================
VITE_API_URL=http://localhost:5001/api

# For production deployment, use your domain:
# VITE_API_URL=https://yourdomain.com/api
