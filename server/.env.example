# Server Configuration
PORT=5001
NODE_ENV=production

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=journey_planner
DB_USER=postgres
DB_PASSWORD=your_postgres_password

# CORS Configuration (optional)
ALLOWED_ORIGINS=http://localhost:3000,https://your-tailscale-domain.ts.net

# Email Configuration (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# File uploads
UPLOAD_DIR=/app/uploads/attachments
MAX_FILE_SIZE=10485760
FILE_ENCRYPTION_KEY=
# FILE_ENCRYPTION_KEY should be a 32 byte key in hex (64 characters). Example: a1b2... (not recommended to store in repo)
